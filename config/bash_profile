# .bash_profile

# Get the aliases and functions
#if [ -f ~/.bashrc ]; then
#	. ~/.bashrc
#fi

# User specific environment and startup programs

PATH=$PATH:$HOME/bin:$HOME/bin/RubyMine-6.3.2/bin

export PATH

# For the lulz
alias please='sudo'

# Enhancing ls to prefix with git branch info 
# when working in a source-controlled path
alias ls='git status 2>/dev/null|grep branch;ls'

# Lazy shortcuts 
alias gitst='git status'
alias gist='git status'

# Log in to my home server.
alias go_home='ssh chris@klaital.com'
alias home='ssh chris@klaital.com'

# TMUS-specific stuff
if [ -f ~/.bash_tmus ]; then
	. ~/.bash_tmus
fi

# Deploy a release candidate to the [test|prod] branch
alias deploy-test='git checkout deploy-test; git merge master; git push; git checkout master'
alias deploy-prod='git checkout deploy-prod; git merge master; git push; git checkout master'

# Add the Xerces install path/variables
export PATH="$PATH:/home/ccox37/bin/xerces-c-3.1.1-x86_64-linux-gcc-3.4/bin"
export LD_LIBRARY_PATH=/home/ccox37/bin/xerces-c-3.1.1-x86_64-linux-gcc-3.4/lib:$LD_LIBRARY_PATH

# Add the vertx binary
export PATH="$PATH:$HOME/bin/vertx/bin"

# Add the IntelliJ binaries
export PATH="$PATH:$HOME/bin/idea-IU-145.258.11/bin"

# Add the Mongo binaries
export PATH="$PATH:$HOME/bin/mongodb-linux-x86_64-ubuntu1404-3.2.4/bin"

